<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tripmate.TRIPMATE_API.repository.ReportMapper">

    <insert id="insertReport">
        INSERT INTO reports (id, user_id, post_id, reason)
        VALUES (#{id}, #{user_id}, #{post_id}, #{reason});
    </insert>

    <select id="getReport" parameterType="Integer" resultType="Report">
        select *
        from reports
        where id = #{id};
    </select>

</mapper>
