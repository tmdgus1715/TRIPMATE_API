<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tripmate.TRIPMATE_API.repository.TravelCategoryMapper">

    <insert id="createCategory" parameterType="TravelCategory">
        INSERT INTO travel_categories (name)
        VALUES (#{name});
    </insert>

    <update id="updateCategory" parameterType="TravelCategory">
        UPDATE travel_categories
        SET name = #{name}
        WHERE id = #{id};
    </update>

    <select id="getCategories" resultType="TravelCategory">
        select *
        from travel_categories;
    </select>

    <delete id="deleteCategory" parameterType="Integer">
        DELETE FROM travel_categories
        WHERE id = #{id};
    </delete>
</mapper>