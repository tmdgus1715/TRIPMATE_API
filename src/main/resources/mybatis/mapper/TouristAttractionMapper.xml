<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tripmate.TRIPMATE_API.repository.TouristAttractionMapper">

    <insert id="createUser" parameterType="domain.TouristAttraction">
        insert into users(id, name) values(#{id}, #{name});
    </insert>

    <select id="getTravelAttraction" parameterType="Integer" resultType="domain.TouristAttraction">
        select * from `tourist_attractions` where `id` = #{id};
    </select>

    <select id="getTravelAttractions" resultType="domain.TouristAttraction">
        SELECT * FROM some_table WHERE id IN
        <foreach collection="ids" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </select>

    <select id="getTravelAttractionsOfTravelCategory" parameterType="java.util.ArrayList" resultType="domain.TouristAttraction">
        SELECT * FROM some_table WHERE id IN
        <foreach collection="ids" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </select>

    <delete id="deleteTravelAttraction" parameterType="Integer">

    </delete>

    <update id="updateTravelAttraction" parameterType="Integer">
        /*mybatis에서는 mapper의 인자에 @Param을 명시해주면 parameterType을 명시할 필요가 없다.*/
    </update>
</mapper>
